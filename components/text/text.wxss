/* pages/character/character.wxss */
.wx-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}

.wx-dialog {
  position: fixed;
  z-index: 5000;
  width: 90%;
  max-width: 700rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #fff;
  text-align: center;
  overflow: hidden;
  border: 2px solid rgba(139,87,42,0.70);
  border-radius: 8px;
}

.wx-dialog-title {
  font-size: 18px;
  padding: 15px 15px 5px;
  border-bottom: 2px solid rgba(139,87,42,0.70);
}

.wx-dialog-content {
  padding: 15px 15px 5px;
  min-height: 40px;
  font-size: 16px;
  line-height: 1.3;
  word-wrap: break-word;
  word-break: break-all;
  color: #ccc;
  border-bottom: 2px solid rgba(139,87,42,0.70);
}

.wx-dialog-footer {
  display: flex;
  align-items: center;
  position: relative;
  line-height: 45px;
  font-size: 17px;
  padding: 2% 20%;
}

.wx-dialog-footer::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid #d5d5d6;
  color: #d5d5d6;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.wx-dialog-btn {
  display: block;
  -webkit-flex: 1;
  flex: 1;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  position: relative;
}

.wx-dialog-footer .wx-dialog-btn:nth-of-type(1) {
  color: #353535;
}

.wx-dialog-footer .wx-dialog-btn:nth-of-type(2) {
  color: #3cc51f;
}

.wx-dialog-footer .wx-dialog-btn:nth-of-type(2):after {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  border-left: 1px solid #d5d5d6;
  color: #d5d5d6;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
}
.textarea{
  width: 100%;
}
.wx-dialog-footer .confirm{
  background: #8B572A;
  border-radius: 3px;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #FFFFFF;
}
.wx-dialog-footer .cancel{
  background: #ccc;
  border-radius: 3px;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #FFFFFF;
}