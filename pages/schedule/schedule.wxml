  <button type="primary" bindtap="showDialog"> ClickMe! </button>

 <view class="table">
      <view class="tr">
          <view class="th month">{{schedule.month}}</view>
          <view class="th" wx:for="{{dayList}}" wx:key="index">
          <view class="date">{{dayList[index]}}</view>
          <view class="day">{{schedule.tableData[index].date}}</view>
          </view>
      </view>
      <view class="tr" wx:for="{{timeList}}" wx:key="index">
          <view class="td time">{{timeList[index]}}</view>
          <template is="{{schedule.tableData[0].dateData[index].status}}" data="{{...schedule.tableData[0].dateData[index]}}"></template>
          <template is="{{schedule.tableData[1].dateData[index].status}}" data="{{...schedule.tableData[1].dateData[index]}}"></template>
          <template is="{{schedule.tableData[2].dateData[index].status}}" data="{{...schedule.tableData[2].dateData[index]}}"></template>
          <template is="{{schedule.tableData[3].dateData[index].status}}" data="{{...schedule.tableData[3].dateData[index]}}"></template>
          <template is="{{schedule.tableData[4].dateData[index].status}}" data="{{...schedule.tableData[4].dateData[index]}}"></template>
          <template is="{{schedule.tableData[5].dateData[index].status}}" data="{{...schedule.tableData[5].dateData[index]}}"></template>
          <template is="{{schedule.tableData[6].dateData[index].status}}" data="{{...schedule.tableData[6].dateData[index]}}"></template>
      </view>
    </view>
</view>

<template name="finished">
  <view class="td finished">
    <view class="name">{{itemName}}</view>
    <view class="link">{{link}}</view>
    <view class="status">已学习</view>
  </view>
</template>
<template name="unfinishClass">
  <view class="td unfinishClass">
    <view class="name">{{itemName}}</view>
    <view class="link">{{link}}</view>
    <view class="status">待学习</view>
  </view>
</template>
<template name="unfinishAffair">
  <view class="td unfinishAffair">
    <view class="name">{{itemName}}</view>
    <view class="status">待完成</view>
  </view>
</template>
<template name="empty">
  <view class="td">
  </view>
</template>

  <text id='dialog' 
        cancelText='取消' 
        confirm='确定' 
        text="{{text}}"
        bind:cancelEvent="_cancelEvent" 
        bind:confirmEvent="_confirmEvent"/>
  <camera id='dialog' 
        cancelText='取消' 
        confirm='确定' 
        camera="{{camera}}"
        bind:cancelEvent="_cancelEvent" 
        bind:confirmEvent="_confirmEvent"/>
  <functionList id='dialog' 
        functionList="{{functionList}}"
        bind:closeDialog="_closeDialog"
        bind:openText="_openText" 
        bind:openCamera="_openCamera"/>