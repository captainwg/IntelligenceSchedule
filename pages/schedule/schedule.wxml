 <view class="table">
      <view class="tr">
          <view class="th month">{{month}}</view>
          <view class="th" wx:for="{{dateList}}" wx:key="index">
          <view>{{dateList[index].day}}</view>
          <view>{{dateList[index].date}}</view>
          </view>
      </view>
      <view class="tr" wx:for="{{timeList}}" wx:key="index">
          <view class="td time">{{timeList[index]}}</view>
          <template is="{{dayData[index].show}}" data="{{...dayData[index]}}"></template>
          <template is="{{dayData[index].show}}" data="{{...dayData[index]}}"></template>
